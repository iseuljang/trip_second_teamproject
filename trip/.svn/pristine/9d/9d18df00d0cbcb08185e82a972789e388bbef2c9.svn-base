			type : "post",
			url  : "recodelete.jsp",
			data : 
			{	
				bno :  bno
			},
			datatype : "html",
			success : function(result)
			{
				result = result.trim();
				alert("추천취소되었습니다.");
				window.location.reload();
			}
		});
	}
	//비추천 취소
	function DoReco_down_delete(bno)
	{
		if(confirm("비추천 취소하시겠습니까?") == false )
